{
  "name": "binance-mcp-server",
  "version": "1.0.0",
  "description": "Binance MCP Server for Portfolio Margin Account",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "start:server": "node scripts/start-server.js",
    "dev": "tsc --watch",
    "dev:run": "tsx src/index.ts",
    "dev:server": "tsx src/server.ts",
    "dev:http": "SERVER_MODE=http npm run start:http",
    "clean": "rm -rf build",
    "test:connection": "node scripts/test-connection.js",
    "test:server": "node scripts/test-server.js",
    "validate": "node scripts/validate-tools.cjs"
  },
  "keywords": [
    "binance",
    "mcp",
    "trading",
    "crypto",
    "portfolio-margin"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "binance-api-node": "^0.12.7",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "node-fetch": "^3.3.2",
    "tsx": "^4.20.5",
    "typescript": "^5.3.0"
  }
}