{
  "name": "binance-mcp-server",
  "version": "1.0.0",
  "description": "Binance MCP Server for Portfolio Margin Account",
  "main": "build/server/mcp_server.js",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/server/mcp_server.js",
    "start:stdio": "node build/index.js",
    "start:sse": "SERVER_MODE=sse node build/server/mcp_server.js",
    "start:multi-mode": "SERVER_MODE=multi-mode node build/server/mcp_server.js",
    "start:streamable-http": "SERVER_MODE=streamable-http node build/server/mcp_server.js",
    "dev": "tsc --watch",
    "dev:stdio": "tsx src/index.ts",
    "dev:run": "tsx src/server/mcp_server.ts",
    "dev:sse": "SERVER_MODE=sse tsx src/server/mcp_server.ts",
    "dev:multi-mode": "SERVER_MODE=multi-mode tsx src/server/mcp_server.ts",
    "dev:streamable-http": "SERVER_MODE=streamable-http tsx src/server/mcp_server.ts",
    "clean": "rm -rf build",
    "test:connection": "node scripts/test-connection.js",
    "test:server": "node scripts/test-server.js",
    "test:http": "node test-simple-http.js",
    "test:demo": "node test-demo.js",
    "validate": "node scripts/validate-tools.cjs",
    "test:unit": "tsx tests/observability.test.ts",
    "test": "npm run test:unit"
  },
  "keywords": [
    "binance",
    "mcp",
    "trading",
    "crypto",
    "portfolio-margin"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "binance-api-node": "^0.12.7",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "tsx": "^4.20.5",
    "typescript": "^5.3.0"
  }
}
